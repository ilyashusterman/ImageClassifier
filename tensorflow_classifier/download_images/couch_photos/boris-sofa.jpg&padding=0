	<script>
		jQuery(document).ready(function()
		{
			jQuery('*').on('hide.bs.tab', function( event ) {
				isBootstrapEvent = true;
			});

			jQuery('*').on('hide.bs.dropdown', function( event ) {
				isBootstrapEvent = true;
			});

			jQuery('*').on('hide.bs.collapse', function( event ) {
				isBootstrapEvent = true;
			});

			jQuery('*').on('hide.bs.modal', function( event ) {
				isBootstrapEvent = true;
			});

			jQuery('#modal-mi-carrito').on('hidden.bs.modal', function (e) {
				jQuery('#modal-mi-carrito .cart-products-container').html( 'Cargando...' );
				jQuery('#modal-mi-carrito .total').html( '' );
			});

			jQuery('#modal-mi-carrito').on('.modal-content', function (e) {
				jQuery('#modal-mi-carrito .cart-products-container').html( 'Cargando...' );
				jQuery('#modal-mi-carrito .total').html( '' );
			});

			jQuery('#modal-mi-carrito')
				.on(
					'click',
					'.cart-product-remove',
					function()
					{
						var productId		=	jQuery(this).data('product-id');
						removeModalCart( productId );
					}
				);

			jQuery('#modal-mi-carrito')
				.on(
					'click',
					'.addcant .glyphicon-minus-sign, .addcant .glyphicon-plus-sign',
					function()
					{
						var productId		=	jQuery(this).data('cart-product');
						var action			=	jQuery(this).data('cart-action');
						updateQtyModalCart( productId, action );
					}
				)

			jQuery('#micarrito')
				.click(
					function()
					{
						jQuery('#modal-mi-carrito').modal();
						updateModalCart();
					}
				)

		});

		function addModalCart()
		{
			var ajaxCartAddUrl		=	'https://www.centrohogarsanchez.es/ajaxjson/cart/add/';
			var dataSerialize		=	jQuery('#product_addtocart_form').serialize();

			jQuery('#modal-mi-carrito').modal('show');

			jQuery.getJSON(
						ajaxCartAddUrl,
						dataSerialize,
						function( data )
						{
							paintModalCart( data )
						}
					);
		}

		function updateModalCart()
		{
			var ajaxCartUrl			=	'https://www.centrohogarsanchez.es/ajaxjson/cart/';

			jQuery.getJSON(
						ajaxCartUrl,
						'',
						function( data )
						{
							paintModalCart( data )
						}
					);
		}

		function updateQtyModalCart( product, action)
		{
			jQuery('#modal-mi-carrito .cart-products-container').html( 'Cargando...' );
			jQuery('#modal-mi-carrito .total').html( '' );

			var ajaxCartUpdateUrl	=	'https://www.centrohogarsanchez.es/ajaxjson/cart/update/';

			jQuery.getJSON(
						ajaxCartUpdateUrl,
						'product=' + product + '&action=' + action,
						function( data )
						{
							paintModalCart( data )
						}
					);
		}

		function removeModalCart( productId )
		{
			jQuery('#modal-mi-carrito .cart-products-container').html( 'Cargando...' );
			jQuery('#modal-mi-carrito .total').html( '' );

			var ajaxCartRemoveUrl	=	'https://www.centrohogarsanchez.es/ajaxjson/cart/remove/';

			jQuery.getJSON(
						ajaxCartRemoveUrl,
						'product=' + productId,
						function( data )
						{
							paintModalCart( data )
						}
					);

		}

		function paintModalCart( response )
		{
			var cartContainer	=	'';

			jQuery.each(
					response.data.products,
					function( index, value )
					{
						// Servicios adicionales: mensaje.
                      	var additional_service_message = [];	
                        if ( Array.isArray(response.data.products[index].additional_services) && response.data.products[index].additional_services.length > 0 ) {
	                        var additional_adicional_label = '<b>Servicios incluidos:</b> ';
                          	for (var i=0,  tot=response.data.products[index].additional_services.length; i < tot; i++) {   		
                        		var additional_service_name = response.data.products[index].additional_services[i].name;
                        		var additional_service_qty = response.data.products[index].additional_services[i].qty;
                                var additional_service_price = response.data.products[index].additional_services[i].price;
                          		additional_service_message.push ( additional_service_name + ' (x' + additional_service_qty + ')' )
                          	}
                        }
						//alert( response.data.products[index].name );
						cartContainer =	cartContainer + '<div class="producto-add">';	
							cartContainer =	cartContainer + '<div class="row">';
								cartContainer =	cartContainer + '<div class="col-xs-5 col-sm-2">';
									cartContainer =	cartContainer + '<img src="' + response.data.products[index].image + '" class="img-responsive">';
								cartContainer =	cartContainer + '</div>';
						
								cartContainer =	cartContainer + '<div class="col-xs-7 col-sm-10">';
									cartContainer =	cartContainer + '<div class="col-xs-12">';
										cartContainer =	cartContainer + '<p>' + response.data.products[index].name + '</p>';
									cartContainer =	cartContainer + '</div>';
									cartContainer =	cartContainer + '<div class="col-xs-10 col-sm-3">';
										cartContainer =	cartContainer + '<div class="addcant">';
											cartContainer =	cartContainer + '<i class="glyphicon glyphicon-minus-sign" data-key="" data-cart-action="remove" data-cart-product="' + response.data.products[index].id + '"></i>';
											cartContainer =	cartContainer + '<input type="text" id="cantidad" disabled="" value="' + response.data.products[index].qty + '">';
											cartContainer =	cartContainer + '<i class="glyphicon glyphicon-plus-sign" data-key="" data-cart-action="add" data-cart-product="' + response.data.products[index].id + '"></i>';
										cartContainer =	cartContainer + '</div>';
									cartContainer =	cartContainer + '</div>';
									cartContainer =	cartContainer + '<div class="col-xs-2 col-sm-2 col-sm-push-7">';
										cartContainer =	cartContainer + '<i class="glyphicon glyphicon-trash remove cart-product-remove" data-product-id="' + response.data.products[index].id + '"></i>';
									cartContainer =	cartContainer + '</div>';
									cartContainer =	cartContainer + '<div class="col-xs-12 col-sm-7 col-sm-pull-2">';
										cartContainer =	cartContainer + '<div class="price">';
											if ( response.data.products[index].offers.price >  response.data.products[index].offers.final_price ) {
												cartContainer =	cartContainer + '<span class="number antes">' + response.data.products[index].offers.price_format + '</span>';
											}
											cartContainer =	cartContainer + '<span class="number ahora">' + response.data.products[index].offers.final_price_format + '</span>';
										cartContainer =	cartContainer + '</div>';
									cartContainer =	cartContainer + '</div>';
								cartContainer =	cartContainer + '</div>';
								if (response.data.products[index].additional_services.length > 0) {
								// Servicios Adicionales
								cartContainer =	cartContainer + '<div class="col-xs-12">';
									cartContainer =	cartContainer + '<div id="adicionales-ajax" class="text-right">';
	                                cartContainer =	cartContainer + additional_adicional_label + additional_service_message.join(' + ');
	    							cartContainer =	cartContainer + '</div>';
	    						cartContainer =	cartContainer + '</div>';
    							//
    							}
							cartContainer =	cartContainer + '</div>'; //cierre row
						cartContainer =	cartContainer + '</div>';
					});

			if ( response.data.cart.shipping > 0 )
			{
				cartContainer =	cartContainer + '<div class="gastos-envio">';
				cartContainer =	cartContainer + '<div class="row">';
				cartContainer =	cartContainer + '<div class="col-xs-6 col-sm-8">';
				cartContainer =	cartContainer + '<p>Costes de envío</p>';
				cartContainer =	cartContainer + '</div>';
				cartContainer =	cartContainer + '<div class="col-xs-6 col-sm-4">';
				cartContainer =	cartContainer + '<span class="number">' + response.data.cart.shipping_format + '</span>';
				cartContainer =	cartContainer + '</div>';
				cartContainer =	cartContainer + '</div>';
				cartContainer =	cartContainer + '</div>';
			}

			jQuery('#modal-mi-carrito .cart-products-container').html( cartContainer );
			jQuery('#modal-mi-carrito .total').html( '<div class="row"><div class="col-xs-6"><p>Total <small>(IVA incl.)</small></p></div><div class="col-xs-6"><span class="number">' + response.data.cart.total_format + '	</span></div></div>' );

			jQuery('#modal-mi-carrito').modal('handleUpdate');
			
			var num_products_cart = 0;
			jQuery.each(response.data.products,function(i,count_prod){
				num_products_cart += count_prod.qty;
			});
			
			jQuery(".micarrito .count_products").text(num_products_cart);
		}
		
		
		jQuery(document).ready(function(){
			var classname = jQuery("body").attr('class').split(' ').last();
			jQuery('ul').find("[data-categoryname='"+classname+"']").addClass('active');
		});

	</script>		

